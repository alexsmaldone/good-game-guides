extends layout.pug
include utils.pug

block head
    title #{title}
append head
    link(rel='stylesheet' href='/stylesheets/reviews.css')
    //- script

block content
    div(class='new-review-container')
        h1 Leave a Review
        if errors
            div(class='error-box')
                +validationErrorSummary(errors)
        form(method='post' action=`/game-guides/${gameGuideId}/reviews/new`)
            fieldset()
                input(type='hidden' name='_csrf' value=csrfToken)

                div(class="fieldEle heart-rating") Rating
                    input(type='radio' name='rating' title="did not like it" value='1' id='rating1' class='heart')
                    label(for='rating1'): span 1
                    input(type='radio' name='rating' title="it was ok" value='2' id='rating2' class='heart')
                    label(for='rating2'): span 2
                    input(type='radio' name='rating' title="liked it" value='3' id='rating3' class='heart')
                    label(for='rating3'): span 3
                    input(type='radio' name='rating' title="really liked it" value='4' id='rating4' class='heart')
                    label(for='rating4'): span 4
                    input(type='radio' name='rating' title="it was amazing" value='5' id='rating5' class='heart')
                    label(for='rating5'): span 5

                //- div(class="rating-stars wtp-rating")
                    div(class="star-rating")
                        a(class="star" title="it was amazing" href="#") 5 of 5 stars
                        a(class="star" title="really liked it" href="#") 4 of 5 stars
                        a(class="star" title="liked it" href="#") 3 of 5 stars
                        a(class="star" title="it was ok" href="#") 2 of 5 stars
                        a(class="star" title="did not like it" href="#") 1 of 5 stars


                div(class="fieldEle")
                    +field('Review', 'reviewText', reviewText, 'textarea')
                div(class="submitEle")
                    button(type='submit' class="submit-button") Submit
                    a(href=`/game-guides/${gameGuideId}` class="submit-button cancel-button") Cancel
