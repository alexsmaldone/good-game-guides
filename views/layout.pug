doctype html
html
  head
      link(rel="stylesheet" href="/stylesheets/nav.css")
      block head
        title #{title}
  body
    nav
      div.left-nav
        a(href="/")
          img#logo(src="/images/ggg_logo_white.png", alt="Good-Game-Guides Logo")
        span
          ul.nav-links
            li#home-button: a(href="/") Home
            if locals.authenticated
              li#my-guides-button: a(href="/my-game-guides") My Game Guides
            else
              li#my-guides-button: a(href="/users/login") My Game Guides
      div.right-nav
        ul.user-nav
          if locals.authenticated
            li#user-name #{user.fullName}
            li
              include includes/logout.pug
          else
            li#login-button: a(href="/users/login") Login
            li#signup-button Not a member?&nbsp
              a(href="/users/signup") Sign Up
    block content
